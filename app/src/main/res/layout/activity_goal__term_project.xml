<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1k9s9_000.termproject.Goal_TermProject">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★Goal★"
        android:id="@+id/title_achievement"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#322727"
        android:textSize="65dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 기간: "
        android:id="@+id/term_ac"
        android:layout_below="@+id/title_achievement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:textStyle="normal|bold|italic"
        android:textColor="#475ee1"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 거리: "
        android:id="@+id/distance_ac"
        android:layout_marginTop="61dp"
        android:textStyle="normal|bold|italic"
        android:textColor="#475ee1"
        android:textSize="50dp"
        android:layout_below="@+id/term_ac"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 칼로리: "
        android:id="@+id/calorie_ac"
        android:textStyle="normal|bold|italic"
        android:textColor="#475ee1"
        android:textSize="48dp"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/distance_ac"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/setting"
        android:textColor="#4046f7"
        android:textStyle="normal|italic"
        android:width="200dp"
        android:textSize="50dp"
        android:height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/check_goal"
        android:textColor="#4046f7"
        android:textStyle="normal|italic"
        android:width="200dp"
        android:textSize="50dp"
        android:height="80dp"
        android:layout_alignTop="@+id/setting"
        android:layout_alignRight="@+id/title_achievement"
        android:layout_alignEnd="@+id/title_achievement" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year1"
        android:hint = "Year1"
        android:layout_alignBottom="@+id/term_ac"
        android:layout_toRightOf="@+id/term_ac"
        android:layout_toEndOf="@+id/term_ac"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/month1"
        android:hint="Month1"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/year1"
        android:layout_toRightOf="@+id/year1"
        android:layout_toEndOf="@+id/year1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day1"
        android:hint="Day1"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/month1"
        android:layout_toRightOf="@+id/month1"
        android:layout_toEndOf="@+id/month1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year2"
        android:hint="Year2"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_below="@+id/term_ac"
        android:layout_toRightOf="@+id/term_ac"
        android:layout_toEndOf="@+id/term_ac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/month2"
        android:hint="Month2"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/year2"
        android:layout_toRightOf="@+id/year1"
        android:layout_toEndOf="@+id/year1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day2"
        android:hint="Day2"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/month2"
        android:layout_alignLeft="@+id/day1"
        android:layout_alignStart="@+id/day1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_d"
        android:hint="Distance(M) - 숫자만 입력"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/distance_ac"
        android:layout_toRightOf="@+id/distance_ac"
        android:layout_toEndOf="@+id/distance_ac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_c"
        android:hint="Calorie(kcal) - 숫자만 입력"
        android:textColor="#110f0f"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/calorie_ac"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
